{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-iphone16pro",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "SmartKeyboard.xcodeproj",
                "-scheme",
                "SmartKeyboard",
                "-configuration",
                "Debug",
                "-sdk",
                "iphonesimulator",
                "-destination",
                "platform=iOS Simulator,name=iPhone 16 Pro,OS=17.2",
                "CONFIGURATION_BUILD_DIR=$(pwd)/build/Debug-iphonesimulator",
                "CODE_SIGN_IDENTITY=-",
                "CODE_SIGNING_REQUIRED=NO",
                "CODE_SIGNING_ALLOWED=NO"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
} 